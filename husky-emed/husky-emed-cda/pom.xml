<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <groupId>org.husky.emed.cda</groupId>
    <artifactId>husky-emed-cda</artifactId>
    <name>eHealth Connector eMedication CDA</name>

    <parent>
        <groupId>org.husky.emed</groupId>
	    <artifactId>husky-emed</artifactId>
        <version>2.0-ALPHA</version>
    </parent>

    <dependencies>
        <!-- Own dependencies -->
        <!-- <dependency>
            <groupId>org.husky.emed.common</groupId>
            <artifactId>husky-emed-common</artifactId>
            <version>2.0-ALPHA</version>
        </dependency> -->
        <dependency>
            <groupId>org.husky.common</groupId>
            <artifactId>husky-common-gen</artifactId>
            <version>2.0-ALPHA</version>
        </dependency>

        <!-- HAPI Java HL7 API Base Module, (GPL + MPL 1.1) -->
        <dependency>
            <groupId>ca.uhn.hapi</groupId>
            <artifactId>hapi-base</artifactId>
            <version>2.3</version>
        </dependency>

        <!-- Schematron validator (Apache 2.0) -->
        <dependency>
            <groupId>com.helger.schematron</groupId>
            <artifactId>ph-schematron-api</artifactId>
            <version>6.2.1</version>
        </dependency>
        <dependency>
            <groupId>com.helger.schematron</groupId>
            <artifactId>ph-schematron-xslt</artifactId>
            <version>6.2.1</version>
        </dependency>

        <!-- JAXB binding (EDL 1.0) -->
        <dependency>
            <groupId>org.glassfish.jaxb</groupId>
            <artifactId>jaxb-runtime</artifactId>
        </dependency>
        <dependency>
            <groupId>com.sun.xml.bind</groupId>
            <artifactId>jaxb-impl</artifactId>
        </dependency>

        <!-- Spring annotations (Apache 2.0) -->
        <dependency>
            <groupId>org.springframework</groupId>
            <artifactId>spring-context</artifactId>
            <version>5.3.9</version><!-- TODO -->
        </dependency>

        <dependency>
            <!-- The Checker Framework enhances Java's type system to make it more powerful and useful. -->
            <groupId>org.checkerframework</groupId>
            <artifactId>checker-qual</artifactId> <!-- MIT -->
            <version>3.18.0</version>
        </dependency>
        <dependency>
            <!-- Project Lombok is a boilerplate code remover and space saver that generates code -->
            <groupId>org.projectlombok</groupId>
            <artifactId>lombok</artifactId> <!-- MIT -->
            <version>1.18.20</version>
            <scope>provided</scope>
        </dependency>

        <!-- Tests (EPL 2.0) -->
        <dependency>
            <groupId>org.junit.jupiter</groupId>
            <artifactId>junit-jupiter-api</artifactId>
            <version>5.7.2</version>
            <scope>test</scope>
        </dependency>

    </dependencies>

    <profiles>
        <profile>
            <id>ehc4dotnet-disabled</id>
            <!-- activation> <os> <family>Windows</family> </os> </activation -->
            <!-- Converts the ehealthconnector library to a .net version using IKVMC -->
            <build>
                <plugins>

                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-antrun-plugin</artifactId>

                        <configuration>
                            <target>
                                <exec executable="ikvmc">
                                    <arg value="-target:library" />
                                    <arg value="-out:${project.build.directory}/${project.artifactId}-${project.version}.dll" />
                                    <arg value="${project.build.directory}/${project.artifactId}-${project.version}.jar" />
                                </exec>
                            </target>
                        </configuration>
                        <executions>
                            <execution>
                                <phase>package</phase>
                                <goals>
                                    <goal>run</goal>
                                </goals>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>
    </profiles>
</project>